# Gary Simon Teacher Case Example
# This example demonstrates the ICAC educational exploitation ontology applied to the Gary Simon case
# Based on Brooklyn DA press release: "Teacher Arraigned on Indictment Charging Him with Sexual Abuse of Two Students"

@prefix : <https://ontology.caseontology.org/icac/examples/gary-simon-case/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix uco-core: <https://ontology.unifiedcyberontology.org/uco/core/> .
@prefix uco-identity: <https://ontology.unifiedcyberontology.org/uco/identity/> .
@prefix uco-location: <https://ontology.unifiedcyberontology.org/uco/location/> .
@prefix uco-observable: <https://ontology.unifiedcyberontology.org/uco/observable/> .
@prefix uco-action: <https://ontology.unifiedcyberontology.org/uco/action/> .
@prefix uco-role: <https://ontology.unifiedcyberontology.org/uco/role/> .
@prefix cacontology: <https://ontology.caseontology.org/icac/> .
@prefix cacontology-educational: <https://ontology.caseontology.org/icac/educational-exploitation/> .

# =============================================================================
# CASE INVESTIGATION
# =============================================================================

:gary-simon-investigation rdf:type cacontology-educational:EducationalInstitutionInvestigation ;
    rdfs:label "Gary Simon Teacher Investigation"@en ;
    rdfs:comment "Investigation of Gary Simon for sexual abuse of students at I.S. 218."@en ;
    uco-core:name "Gary Simon Teacher Sexual Abuse Investigation" ;
    cacontology-educational:investigatesExploitation :gary-simon-exploitation ;
    cacontology-educational:collectsEvidence :written-harassment-evidence-1, :written-harassment-evidence-2, :victim-testimony-1, :victim-testimony-2, :witness-testimony-evidence ;
    cacontology-educational:interviewsVictim :victim-1, :victim-2 ;
    cacontology-educational:coordinatesWith :brooklyn-da-office, :nypd .

# =============================================================================
# EDUCATIONAL INSTITUTION
# =============================================================================

:is-218 rdf:type cacontology-educational:IntermediateSchool ;
    rdfs:label "I.S. 218"@en ;
    rdfs:comment "Intermediate School 218 where Gary Simon was employed as math teacher."@en ;
    uco-core:name "Intermediate School 218" ;
    cacontology-educational:institutionType "public" ;
    cacontology-educational:gradeRange "6-8" ;
    cacontology-educational:studentPopulation 800 ;
    cacontology-educational:institutionLocation "Brooklyn, NY" ;
    cacontology-educational:schoolAddress "1 Intermediate School 218, Brooklyn, NY" ;
    cacontology-educational:hasVulnerability :classroom-isolation-vulnerability, :academic-power-vulnerability .

# =============================================================================
# PERPETRATOR AND ROLE
# =============================================================================

:gary-simon rdf:type uco-identity:Person ;
    rdfs:label "Gary Simon"@en ;
    rdfs:comment "59-year-old math teacher at I.S. 218 charged with sexual abuse of students."@en ;
    uco-core:name "Gary Simon" ;
    cacontology-educational:employedAt :is-218 ;
    cacontology-educational:exploitsPosition :gary-simon-math-teacher-role .

:gary-simon-math-teacher-role rdf:type cacontology-educational:MathTeacherRole ;
    rdfs:label "Gary Simon Math Teacher Role"@en ;
    rdfs:comment "Gary Simon's role as math teacher at I.S. 218."@en ;
    cacontology-educational:subjectTaught "Mathematics" ;
    cacontology-educational:gradeLevel "6-8" ;
    cacontology-educational:educatorAge 59 ;
    cacontology-educational:yearsOfExperience 25.0 ;
    cacontology-educational:accessLevel "classroom_teacher" ;
    cacontology-educational:employmentDuration 120 .

# =============================================================================
# VICTIMS
# =============================================================================

:victim-1 rdf:type uco-identity:Person ;
    rdfs:label "Victim 1"@en ;
    rdfs:comment "13-year-old female student victim of Gary Simon."@en ;
    uco-core:name "Victim 1 (13-year-old)" ;
    cacontology-educational:attendsInstitution :is-218 .

:victim-2 rdf:type uco-identity:Person ;
    rdfs:label "Victim 2"@en ;
    rdfs:comment "12-year-old female student victim of Gary Simon."@en ;
    uco-core:name "Victim 2 (12-year-old)" ;
    cacontology-educational:attendsInstitution :is-218 .

# =============================================================================
# SCHOOL STAFF
# =============================================================================

:school-counselor rdf:type uco-identity:Person ;
    rdfs:label "School Counselor"@en ;
    rdfs:comment "School counselor who received victim disclosure."@en ;
    uco-core:name "School Counselor" ;
    cacontology-educational:employedAt :is-218 .

:gym-teacher rdf:type uco-identity:Person ;
    rdfs:label "Gym Teacher"@en ;
    rdfs:comment "Physical education teacher who received victim disclosure."@en ;
    uco-core:name "Gym Teacher" ;
    cacontology-educational:employedAt :is-218 .

:principal rdf:type uco-identity:Person ;
    rdfs:label "School Principal"@en ;
    rdfs:comment "Principal of I.S. 218 who was notified of allegations."@en ;
    uco-core:name "I.S. 218 Principal" ;
    cacontology-educational:employedAt :is-218 .

# =============================================================================
# LAW ENFORCEMENT AGENCIES
# =============================================================================

:brooklyn-da-office rdf:type uco-identity:Organization ;
    rdfs:label "Brooklyn District Attorney's Office"@en ;
    rdfs:comment "Brooklyn DA's office prosecuting the case."@en ;
    uco-core:name "Brooklyn District Attorney's Office" .

:nypd rdf:type uco-identity:Organization ;
    rdfs:label "New York Police Department"@en ;
    rdfs:comment "NYPD investigating the case."@en ;
    uco-core:name "New York Police Department" .

# =============================================================================
# CLASSROOM LOCATIONS
# =============================================================================

:math-classroom rdf:type uco-location:Location ;
    rdfs:label "Math Classroom"@en ;
    rdfs:comment "Classroom where Gary Simon taught mathematics and exploitation occurred."@en ;
    uco-core:name "Math Classroom - I.S. 218" .

# =============================================================================
# EXPLOITATION ACTIVITIES
# =============================================================================

:gary-simon-exploitation rdf:type cacontology-educational:ClassroomBasedExploitation, cacontology-educational:ImmediatePhysicalContactExploitation ;
    rdfs:label "Gary Simon Classroom Exploitation"@en ;
    rdfs:comment "Sexual exploitation of students by Gary Simon in classroom setting."@en ;
    cacontology-educational:exploitationDuration 2 ;
    cacontology-educational:victimCount 2 ;
    cacontology-educational:exploitationMethod "physical" ;
    cacontology-educational:exploitationLocation "classroom" ;
    cacontology-educational:exploitsPosition :gary-simon-math-teacher-role ;
    cacontology-educational:targetsVictim :intermediate-school-targeting ;
    cacontology-educational:occursInContext :assignment-completion-context, :test-taking-context ;
    cacontology-educational:involvesWrittenHarassment :assignment-harassment-1, :assignment-harassment-2 ;
    cacontology-educational:involvesPhysicalContact :breast-touching-1, :breast-touching-2 ;
    cacontology-educational:takesPlaceIn :math-classroom ;
    cacontology-educational:resultsinCharge :sexual-abuse-first-degree-charge, :sexual-abuse-second-degree-charge, :forcible-touching-charge, :endangering-welfare-charge .

# =============================================================================
# VICTIM TARGETING
# =============================================================================

:intermediate-school-targeting rdf:type cacontology-educational:IntermediateSchoolTargeting ;
    rdfs:label "Intermediate School Student Targeting"@en ;
    rdfs:comment "Targeting of vulnerable intermediate school students."@en ;
    cacontology-educational:targetAgeRange "12-13" ;
    cacontology-educational:targetGender "female" ;
    cacontology-educational:targetingMethod "classroom_access" ;
    cacontology-educational:selectsVictim :victim-1, :victim-2 ;
    cacontology-educational:exploitsVulnerability :academic-power-vulnerability, :classroom-isolation-vulnerability .

# =============================================================================
# ACADEMIC ACTIVITIES
# =============================================================================

:assignment-activity rdf:type uco-action:Action ;
    rdfs:label "Assignment Activity"@en ;
    rdfs:comment "Academic activity of completing assignments."@en ;
    uco-core:name "Assignment Completion Activity" .

:test-activity rdf:type uco-action:Action ;
    rdfs:label "Test Activity"@en ;
    rdfs:comment "Academic activity of taking tests."@en ;
    uco-core:name "Test Taking Activity" .

# =============================================================================
# CLASSROOM EXPLOITATION CONTEXTS
# =============================================================================

:assignment-completion-context rdf:type cacontology-educational:AssignmentCompletionExploitation, cacontology-educational:ClassroomExploitationContext ;
    rdfs:label "Assignment Completion Context"@en ;
    rdfs:comment "Exploitation occurring while students completed assignments."@en ;
    cacontology-educational:classroomNumber "Math Room" ;
    cacontology-educational:academicActivity "assignment_completion" ;
    cacontology-educational:timeOfDay "afternoon" ;
    cacontology-educational:studentsPresent 0 ;
    cacontology-educational:isolationLevel "alone" ;
    cacontology-educational:duringActivity :assignment-activity ;
    cacontology-educational:leveragesAcademicPower :academic-power-vulnerability .

:test-taking-context rdf:type cacontology-educational:TestTakingExploitation, cacontology-educational:ClassroomExploitationContext ;
    rdfs:label "Test Taking Context"@en ;
    rdfs:comment "Exploitation occurring while students took tests."@en ;
    cacontology-educational:classroomNumber "Math Room" ;
    cacontology-educational:academicActivity "test_taking" ;
    cacontology-educational:timeOfDay "afternoon" ;
    cacontology-educational:studentsPresent 1 ;
    cacontology-educational:isolationLevel "few_students" ;
    cacontology-educational:duringActivity :test-activity ;
    cacontology-educational:leveragesAcademicPower :academic-power-vulnerability .

# =============================================================================
# WRITTEN HARASSMENT
# =============================================================================

:assignment-harassment-1 rdf:type cacontology-educational:AssignmentHarassment, cacontology-educational:DegradingWrittenComments ;
    rdfs:label "Assignment Harassment - Victim 1"@en ;
    rdfs:comment "Written harassment on victim 1's assignment."@en ;
    cacontology-educational:harassmentContent "you suck" ;
    cacontology-educational:harassmentMedium "assignment" ;
    cacontology-educational:harassmentFrequency "single_incident" ;
    cacontology-educational:degradationLevel "moderate" ;
    cacontology-educational:writtenOn :victim-1-assignment ;
    cacontology-educational:degradesVictim :victim-1 ;
    cacontology-educational:intimidatesStudent :victim-1 .

:assignment-harassment-2 rdf:type cacontology-educational:AssignmentHarassment, cacontology-educational:DegradingWrittenComments ;
    rdfs:label "Assignment Harassment - Victim 2"@en ;
    rdfs:comment "Written harassment on victim 2's assignment."@en ;
    cacontology-educational:harassmentContent "you suck" ;
    cacontology-educational:harassmentMedium "assignment" ;
    cacontology-educational:harassmentFrequency "single_incident" ;
    cacontology-educational:degradationLevel "moderate" ;
    cacontology-educational:writtenOn :victim-2-assignment ;
    cacontology-educational:degradesVictim :victim-2 ;
    cacontology-educational:intimidatesStudent :victim-2 .

# =============================================================================
# ACADEMIC MATERIALS
# =============================================================================

:victim-1-assignment rdf:type uco-observable:ObservableObject ;
    rdfs:label "Victim 1 Assignment"@en ;
    rdfs:comment "Math assignment completed by victim 1 with harassing comments."@en ;
    uco-core:name "Victim 1 Math Assignment" .

:victim-2-assignment rdf:type uco-observable:ObservableObject ;
    rdfs:label "Victim 2 Assignment"@en ;
    rdfs:comment "Math assignment completed by victim 2 with harassing comments."@en ;
    uco-core:name "Victim 2 Math Assignment" .

# =============================================================================
# PHYSICAL CONTACT PATTERNS
# =============================================================================

:breast-touching-1 rdf:type cacontology-educational:BreastTouching, cacontology-educational:ImmediatePhysicalContact ;
    rdfs:label "Breast Touching - Victim 1"@en ;
    rdfs:comment "Inappropriate breast touching of victim 1."@en ;
    cacontology-educational:contactType "inappropriate_touching" ;
    cacontology-educational:bodyPartTouched "breasts" ;
    cacontology-educational:contactDuration 3.0 ;
    cacontology-educational:contactFrequency "single_incident" ;
    cacontology-educational:touchesVictim :victim-1 .

:breast-touching-2 rdf:type cacontology-educational:BreastTouching, cacontology-educational:ImmediatePhysicalContact ;
    rdfs:label "Breast Touching - Victim 2"@en ;
    rdfs:comment "Inappropriate breast touching of victim 2."@en ;
    cacontology-educational:contactType "inappropriate_touching" ;
    cacontology-educational:bodyPartTouched "breasts" ;
    cacontology-educational:contactDuration 2.5 ;
    cacontology-educational:contactFrequency "single_incident" ;
    cacontology-educational:touchesVictim :victim-2 .

# =============================================================================
# VULNERABILITY FACTORS
# =============================================================================

:classroom-isolation-vulnerability rdf:type cacontology-educational:ClassroomIsolationVulnerability ;
    rdfs:label "Classroom Isolation Vulnerability"@en ;
    rdfs:comment "Vulnerability created when students are alone with teacher in classroom."@en .

:academic-power-vulnerability rdf:type cacontology-educational:AcademicPowerVulnerability ;
    rdfs:label "Academic Power Vulnerability"@en ;
    rdfs:comment "Vulnerability created by teacher's power over student grades and academic success."@en .

# =============================================================================
# REPORTING MECHANISMS
# =============================================================================

:victim-1-disclosure rdf:type cacontology-educational:VictimDisclosureToStaff ;
    rdfs:label "Victim 1 Disclosure"@en ;
    rdfs:comment "Victim 1's disclosure to school counselor."@en ;
    cacontology-educational:disclosureMethod "verbal" ;
    cacontology-educational:disclosesTo :school-counselor ;
    cacontology-educational:activatesMandatoryReporting :counselor-reporting .

:victim-2-disclosure rdf:type cacontology-educational:VictimDisclosureToStaff ;
    rdfs:label "Victim 2 Disclosure"@en ;
    rdfs:comment "Victim 2's disclosure to gym teacher."@en ;
    cacontology-educational:disclosureMethod "verbal" ;
    cacontology-educational:disclosesTo :gym-teacher ;
    cacontology-educational:activatesMandatoryReporting :gym-teacher-reporting .

:counselor-reporting rdf:type cacontology-educational:CounselorReporting ;
    rdfs:label "Counselor Reporting"@en ;
    rdfs:comment "School counselor's mandatory reporting of victim 1's disclosure."@en ;
    cacontology-educational:reportingDelay 0.5 ;
    cacontology-educational:reportingStaffRole "counselor" ;
    cacontology-educational:mandatoryReportingTriggered true ;
    cacontology-educational:receivesReport :victim-1-disclosure ;
    cacontology-educational:notifiesPrincipal :principal-notification .

:gym-teacher-reporting rdf:type cacontology-educational:GymTeacherReporting ;
    rdfs:label "Gym Teacher Reporting"@en ;
    rdfs:comment "Gym teacher's reporting of victim 2's disclosure."@en ;
    cacontology-educational:reportingDelay 0.25 ;
    cacontology-educational:reportingStaffRole "gym_teacher" ;
    cacontology-educational:mandatoryReportingTriggered true ;
    cacontology-educational:receivesReport :victim-2-disclosure ;
    cacontology-educational:notifiesPrincipal :principal-notification .

:principal-notification rdf:type cacontology-educational:PrincipalNotification ;
    rdfs:label "Principal Notification"@en ;
    rdfs:comment "Principal's notification of sexual abuse allegations."@en ;
    cacontology-educational:reportingStaffRole "principal" ;
    cacontology-educational:triggersPoliceNotification :police-notification .

:police-notification rdf:type cacontology-educational:PoliceNotification ;
    rdfs:label "Police Notification"@en ;
    rdfs:comment "Notification of police by school administration."@en ;
    cacontology-educational:policeResponseTime 2.0 ;
    cacontology-educational:reportingStaffRole "principal" .

# =============================================================================
# EVIDENCE
# =============================================================================

:written-harassment-evidence-1 rdf:type cacontology-educational:WrittenHarassmentEvidence ;
    rdfs:label "Written Harassment Evidence - Victim 1"@en ;
    rdfs:comment "Physical evidence of written harassment on victim 1's assignment."@en ;
    cacontology-educational:writtenContent "you suck" ;
    cacontology-educational:assignmentType "homework" ;
    cacontology-educational:evidenceType "written_harassment" ;
    cacontology-educational:evidenceLocation "victim_1_assignment" ;
    cacontology-educational:documentsHarassment :assignment-harassment-1 .

:written-harassment-evidence-2 rdf:type cacontology-educational:WrittenHarassmentEvidence ;
