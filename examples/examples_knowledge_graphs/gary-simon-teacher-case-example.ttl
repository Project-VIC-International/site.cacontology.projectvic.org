:victim-testimony-2 rdf:type cacontology-educational:VictimAccountEvidence ;
    rdfs:label "Victim 2 Testimony"@en ;
    rdfs:comment "Victim 2's account of sexual abuse by Gary Simon."@en ;
    cacontology-educational:evidenceType "victim_testimony" ;
    cacontology-educational:evidenceLocation "police_interview" .

:witness-testimony-evidence rdf:type cacontology-educational:WitnessTestimonyEvidence ;
    rdfs:label "Witness Testimony Evidence"@en ;
    rdfs:comment "Testimony from school staff and other witnesses."@en ;
    cacontology-educational:evidenceType "witness_testimony" ;
    cacontology-educational:witnessesExploitation :gary-simon-exploitation .

# =============================================================================
